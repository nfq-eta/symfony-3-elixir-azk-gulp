{
  "assetsPath": "resources/assets",
  "publicPath": "web",
  "appPath": "app",
  "viewPath": "app/Resources/views",
  "batchOptions": {
    "timeout": 1000
  },
  "css": {
    "folder": "css",
    "outputFolder": "css",
    "autoprefix": {
      "enabled": true,
      "options": {
        "browsers": [
          "last 2 versions"
        ],
        "cascade": false
      }
    },
    "cssnano": {
      "pluginOptions": {
        "autoprefixer": false,
        "safe": true
      }
    },
    "sass": {
      "folder": "sass",
      "pluginOptions": {
        "precision": 10
      }
    },
    "less": {
      "folder": "less",
      "pluginOptions": {}
    }
  },
  "js": {
    "folder": "js",
    "outputFolder": "js",
    "babel": {
      "options": {
        "presets": [
          "es2015",
          "react"
        ]
      }
    },
    "uglify": {
      "options": {
        "compress": {
          "drop_console": true
        }
      }
    },
    "browserify": {
      "options": {
        "cache": {},
        "packageCache": {}
      },
      "plugins": [],
      "externals": [],
      "transformers": [
        {
          "name": "babelify",
          "options": {
            "presets": [
              "es2015",
              "react"
            ]
          }
        },
        {
          "name": "partialify",
          "options": {}
        }
      ],
      "watchify": {
        "enabled": false,
        "options": {}
      }
    },
    "coffee": {
      "folder": "coffee",
      "options": {}
    }
  },
  "testing": {
    "phpUnit": {
      "path": "tests"
    },
    "phpSpec": {
      "path": "spec"
    }
  },
  "versioning": {
    "buildFolder": "public"
  },
  "browserSync": {
    "proxy": "localhost",
    "reloadOnRestart": true,
    "notify": true,
    "open": "external"
  }
}
